    padding-top: 10px;
    padding-bottom: 10px;
  }
}

.drawer-nav__spacer {
  height: $gutter-site;
}

.drawer-nav__has-sublist {
  display: table;
  width: 100%;

  .drawer-nav__link {
    display: table-cell;
    vertical-align: middle;
    width: 100%;
  }
