  width: 100%;
  padding: 0 ($gutter-site / 2);
}

.drawer__inner {
  position: absolute;
  top: $drawer-header-height;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 ($gutter-site / 2);
