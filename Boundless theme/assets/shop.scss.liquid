/*============================================================================
  Drawer skeleton
==============================================================================*/
.is-transitioning {
  display: block !important;
  visibility: visible !important;
}

.js-drawer-open {
  overflow: hidden;
}

.drawer {
  display: none;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  bottom: 0;
  z-index: $z-index-drawer;
  color: $color-drawers-text;
  background-color: $color-drawers;
  transition: $drawer-transition;
}

.drawer--left,
.drawer--right {
  top: 0;
  max-width: 95%;
}

.drawer--left {
  width: $drawer-nav-width;
  left: -$drawer-nav-width;

  .js-drawer-open-left & {
    display: block;
    @include transform(translateX($drawer-nav-width));
  }
}

.drawer--right {
  width: $drawer-cart-width;
  right: -$drawer-cart-width;

  .js-drawer-open-right & {
    display: block;
    @include transform(translateX(-$drawer-cart-width));
  }

  .drawer__close {
    float: right;
    height: $drawer-header-height;
  }
}

.drawer--top {
  width: 100%;
  height: $height-site-header;
  top: -$height-site-header;

  .js-drawer-open-top & {
    display: block;
    @include transform(translateY(100%));
  }
}

#PageContainer {
  overflow: hidden;
}

.drawer-page-content:after {
  visibility: hidden;
  opacity: 0;
  content: '';
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  z-index: $z-index-drawer - 1;
  transition: $drawer-transition;

  .js-drawer-open & {
    visibility: visible;
    opacity: 1;
  }
}

.drawer__title,
.drawer__close {
  display: table-cell;
  vertical-align: middle;
}

.drawer__title {
  @include header-font-stack();
  font-size: em(floor($font-size-header * 0.71)); //17px
  width: 100%;
}

.drawer__close-button {
  background: none;
  border: 0 none;
  position: relative;
  right: -15px;
  height: 100%;
  width: 60px;
  padding: 0 20px;
  color: inherit;
  font-size: em(18);

  .drawer--left & {
    right: auto;
    left: -15px;
  }

  .drawer--product & {
    position: absolute;
    top: 0;
    right: 0;
    height: 60px;
    z-index: $z-index-dropdown;
  }

  &:active,
  &:focus {
    background-color: darken($color-drawers, 5%);
  }
}

/*================ Drawer loader ================*/
.supports-csstransforms .drawer--is-loading .drawer__cart {
  min-height: 100px;

  &:after {
    content: '';
    display: block;
    width: 24px;
    height: 24px;
    position: absolute;
    left: 50%;
    top: $gutter-site * 2;
    margin-left: -12px;
    border-radius: 50%;
    border: 3px solid $color-drawers-border;
    border-top-color: transparent;
    @include animation(spin 1s infinite linear);
