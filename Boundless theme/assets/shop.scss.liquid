  @include media-query ($small) {
    height: $collection-grid-height-mobile;
  }

  @include media-query ($medium-up) {
    height: $collection-grid-height-tablet;
  }

  @include media-query ($widescreen) {
    height: $collection-grid-height-widescreen;
  }

}

.collection-grid__link {
  position: relative;
  overflow: hidden;
  height: 100%;
  width: 100%;
}


.collection-grid__title {
  @include header-font-stack();
  font-size: em(20);
  color: $color-headings-text;

  @include media-query ($medium-down) {
    background-color: $color-action-bar-bg;
    color: $color-action-bar-text;
    padding: 15px $gutter-site;
    line-height: 1;

    .supports-csstransforms3d & {
      position: absolute;
      top: 50%;
      left: 50%;
      @include transform(translate3d(-50%, -50%, 0));
    }
  }
}

.collection-grid__link-overlay {
  display: block;
  overflow: hidden;
  height: 100%;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.collection-grid__title-wrapper {
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  display: table;
}

@include media-query ($large-up) {
  .collection-grid__title {
    opacity: 0;
    display: table-cell;
    vertical-align: middle;
    margin: 0 auto;
  }

  .collection-grid__link-overlay {
    position: relative;
    transition: all 0.8s ease;

    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      opacity: 0;
      background-color: $color-body;
      transition: all 0.5s ease;
    }

    &:hover,
    &:focus {
      @include transform(scale(1.03));

      &:before {
        opacity: 0.95;
      }

      .collection-grid__title {
        opacity: 1;
      }
    }
  }
}

/*================ Module | Pagination ================*/
.pagination {
  @include header-font-stack();
  font-size: em(floor($font-size-header * 0.58)); // 14px
  margin: 0;
  padding: ($gutter-site * 2) 0;
  text-align: center;

  > span {
    display: inline-block;
    line-height: 1;
    padding: 8px 0 8px 16px;
  }

  a {
    display: block;
  }

  .current {
    color: adaptive-color($color-body-text, 10%);
  }
}

.pagination--infinite {
  margin: ($gutter-site * 3) 0;
  text-align: center;
}

