  .drawer-nav--expanded & {
    display: none;
  }
}

.drawer-nav__toggle-close {
  display: none;
  visibility: hidden;

  .drawer-nav--expanded & {
    display: block;
    visibility: visible;
  }
}

.drawer-nav__sublist {
  margin: 0;
  padding: 0;
  max-height: 0;
  visibility: hidden;
  overflow: hidden;
  transition: all 300ms cubic-bezier(0.57, 0.06, 0.05, 0.95);

