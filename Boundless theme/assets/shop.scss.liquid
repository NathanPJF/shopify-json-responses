    text-align: center;
    width: 100%;
    padding: 2px 20px;
    border-radius: $radius;
  }
}

.js-qty__adjust {
  cursor: pointer;
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  border: 0 none;
  padding: 0 8px;
  background: none;
  text-align: center;
  overflow: hidden;
  line-height: 1;
  transition: all 0.2s ease-out;
  @include user-select();
  @include backface(hidden);

  .icon {
    font-size: 8px;
    vertical-align: middle;
  }

  &:hover {
    background-color: darken($color-form, 7%);
  }

  &:active {
    background-color: darken($color-form, 10%);
  }
}

.js-qty__adjust--plus {
  right: 0;
  border-radius: 0 $radius $radius 0;
}

.js-qty__adjust--minus {
  left: 0;
  border-radius: $radius 0 0 $radius;
}

